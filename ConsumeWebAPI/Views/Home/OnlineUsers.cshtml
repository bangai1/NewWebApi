@model List<ConsumeWebAPI.Models.Content>;

@{
    ViewData["Title"] = "Online Users";
}
<h1>@ViewData["Title"]</h1>

<style>
    .card:hover{
        box-shadow: -1px 9px 40px -12px #808080;
    }
</style>



<div class="row">
    @foreach( var item in Model)
    {
        <div class="card" style="width:20em;margin:10px;">
            <img src="@item.img " class="card-img-top" />
            <div class="card-body">
                <div class="card-title">

                    <h2>@item.title</h2>
                </div>
                <div class="card-text">
                    <p>@item.text</p>
                </div>
                <a href="#" class="btn btn-primary">goo</a>
            </div>
        </div>
    }
    
</div>



<script src="~/lib/jquery/dist/jquery.js"></script>
<script type="text/javascript">
    $('.card').hover{
    function() {
            $(this).animate({
                marginTop: "-=1%",
                marginBottom: "+=1%"
            }, 200)
    },

    function() {
            $(this).animate({
                marginTop: "-=1%",
                marginBottom: "+=1%"
            })
        }

  )


</script>



















