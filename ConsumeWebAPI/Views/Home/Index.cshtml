                <button id="btnSelectCompany" class="btn btn-primary companybtn">Get company</button>
            </div>
        </div>

        <ul id="companyList" class="list-unstyled">
            @foreach (var company in Model)
            {
                <li class="company-item" data-company-no="@company.company_No" data-company-name="@company.Company_Name">
