@model IEnumerable<ConsumeWebAPI.Models.CustomerViewModel>

@{
    ViewData["Title"] = "Customer Search";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Search Customer</h2>
    <form asp-action="Index" asp-controller="Customer" method="get" class="form-inline justify-content-center mb-4">
        <div class="form-group mx-sm-3 mb-2">
            <label for="cust_id" class="sr-only">Customer No:</label>
            <input type="text" name="cust_id" id="cust_id" class="form-control" placeholder="Enter Customer ID" />
        </div>
        <button type="submit" class="btn btn-primary mb-2">Search</button>
    </form>
   
    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger text-center">@ViewBag.ErrorMessage</div>
    }

    @if (Model != null && Model.Any())
    {
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Customer Number</th>
                    <th>Subs Number</th>
                    <th>Status</th>
                    <th>Balance</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cus in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => cus.ID)</td>
                        <td>@Html.DisplayFor(modelItem => cus.Name)</td>
                        <td>@Html.DisplayFor(modelItem => cus.Surname)</td>
                        <td>@Html.DisplayFor(modelItem => cus.Cust_No)</td>
                        <td>@Html.DisplayFor(modelItem => cus.Subs_No)</td>
                        <td>@Html.DisplayFor(modelItem => cus.Status)</td>
                        <td>@Html.DisplayFor(modelItem => cus.Balance)</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info text-center">No customer found</div>
    }
</div>
